@model MySecondBrain.Application.ViewModels.NoteDetailViewModel

@{
    ViewData["Title"] = "EditNote";
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/images/hero_1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">

                <div class="row justify-content-center mt-5">
                    <div class="col-md-8 text-center">
                        <h1>Edit a note</h1>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-7 mb-5" data-aos="fade">

                @using (Html.BeginForm("Edit", "Notes", FormMethod.Post))
                {
                <div class="p-5 bg-white">
                    <div class="row form-group">
                        <div class="col-md-12">
                            <div class="text-black">Name</div>
                            @Html.TextBoxFor(m => m.Note.Name, new { cols = "30", rows = "7", @class = "form-control" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <div class="text-black">Description</div>
                            @Html.TextBoxFor(m => m.Note.Description, new { cols = "30", rows = "7", @class = "form-control" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <div class="text-black">Text</div>
                            @Html.TextAreaFor(m => m.Note.Text, new { cols = "30", rows = "7", @class = "form-control", placeholder = "Write a note please !", id = "text_note" })
                        </div>
                    </div>

                    <input type="hidden" asp-for="Note.Id" />

                    <div class="row form-group">
                        <div class="col-md-12">

                            <input type="submit" value="Edit note" class="btn btn-primary py-2 px-4 text-white">
                        </div>
                    </div>
                </div>
                }
            </div>
            <div class="col-md-5" data-aos="fade" data-aos-delay="100">
                <div class="p-4 mb-3 bg-white">
                    Insérer preview ici
                </div>
                @*          Bloc pour affcher le résultat de la syntaxe markdown ?
                    <div class="col-md-5" data-aos="fade" data-aos-delay="100">

                        <div class="p-4 mb-3 bg-white">
                            <p class="mb-0 font-weight-bold">Address</p>
                            <p class="mb-4">30 Chemin de Potisseau, Wépion, Belgique</p>

                            <p class="mb-0 font-weight-bold">Phone</p>
                            <p class="mb-4"><a href="#">0471 68 72 16</a></p>

                            <p class="mb-0 font-weight-bold">Email Address</p>
                            <p class="mb-0"><a href="#">jennypans@gmail.com</a></p>

                        </div>
                    </div>*@
            </div>
        </div>
    </div>
</div>